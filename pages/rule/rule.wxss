/* pages/rule/rule.wxss */

.explain {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  background: #58d656;
}

.prize-box{
  text-align: center;
  margin-top: 50rpx;
}
.prize{
  text-align: center;
  display: inline-block;
  margin: 0 22rpx;
}
.prize image {
  width: 286rpx;
}

.prize-btn {
  background: #f5a623;
  border-radius: 12rpx;
  width: 200rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  margin: 0 auto;
}

.prize-word{
  line-height: 40rpx;
  font-size: 24rpx;
  color: #999;
}

.rule {
  padding: 30rpx;
}

.rule-details {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}
