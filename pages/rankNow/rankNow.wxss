/* pages/rank/rank.wxss */

page {
  box-sizing: border-box;
}

.flex {
  display: flex;
  display: -webkit-flex;
}

.head {
  position: relative;
  width: 750rpx;
  height: 160rpx;
  background: #1aad19;
}
.head>view>image{
  width: 20rpx;
  height: 28rpx;
}
.head-lt,.head-gt{
  position: absolute;
  top: 50rpx;
  color: #fff;
  width: 80rpx;
  height: 80rpx;
}
.head .head-ltgt{
  color: rgba(255, 255, 255, 0.2)
}
.head-lt{
  text-align: left;
  left: 30rpx;
}
.head-gt{
  text-align: right;
  right: 30rpx;
}
.headercar {
  width: 560rpx;
  height: 160rpx;
  margin-left: 95rpx;
}

.headetitle {
  display: block;
  font-size: 32rpx;
  line-height: 50rpx;
  color: #fff;
}

.headetime {
  position: absolute;
  left: 47%;
  top: 54%;
  display: block;
  padding-bottom: 40rpx;
  font-size: 22rpx;
  color: #b8e986;
}

/*主体部分  */

.main {
  width: 750rpx;
}

.main-triangle {
  width: 0;
  height: 0;
  border: 40rpx solid transparent;
  border-bottom: 40rpx solid #fff;
  margin: -60rpx auto 0 auto;
}

.main-count-line {
  width: 750rpx;
  height: 20rpx;
  background: #f2f2f2;
}

.last-dao {
  width: 690rpx;
  height: 150rpx;
  align-items: center;
  margin: 0 auto;
  background: #fff;
}

.bargain_list_number,.first {
  width: 60rpx;
  height: 60rpx;
  margin-right: 26rpx;
  font-size: 24rpx;
  color: #f5a623;
  text-align: center;
 
}
.bargain_list_energy .bargain_list_cx_img{
  display: block;
  width: 120rpx!important;
  height: 80rpx!important;
  margin-left: 50rpx;
}
.bargain_list_cx_name{
  font-size: 24rpx;
  color: #999;
}
.bargain_list_energy .bargain_list_cx_imgname{
  margin-left: 58rpx;
  font-size: 20rpx;
  color: #333;
}
.bargain_list_nick>image{
  width: 96rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-left: 5rpx;
}
.first image{
  display: block;
  width: 60rpx;
  height: 60rpx;
}
.first-top {
  font-size: 32rpx;
  color: #f5a623;

}

.bargain .bargain_list_number {
  font-size: 32rpx;
}

.bargain_list_autor {
  position: relative;
}

.bargain_list_autor>view {
  box-sizing: content-box;
  width: 80rpx;
  height: 80rpx;  
   border-radius: 100%; 
   overflow: hidden; 
   background: #d8d8d8; 
}
.bargain_list_autor .bargain_self_author{
  width: 84rpx;
  height: 80rpx;
  padding: 4rpx 0;
  background: red;
 
}
.bargain_list_autor>view image {
  display: block;
  margin: 0 auto;
  width: 80rpx;
  height: 80rpx;
   border-radius: 100%; 
}

.bargain_list_autor>image {
  position: absolute;
  right: 0rpx;
  bottom: 0rpx;
  width: 36rpx;
  height: 24rpx;
}

.bargain_list_number>image {
  width: 80rpx;
  height: 80rpx;
}

.bargain_list_nick {
  width: 300rpx;
  overflow: hidden;
  margin: 0 0 0 20rpx;
  font-size: 32rpx;
  color: #333;
}
.bargain_list_nickname{
  display: inline-block;
  max-width: 170rpx;
  white-space:nowrap;
  overflow: hidden;
  vertical-align: middle;
}

.bargain_list_energy image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 18rpx;
  vertical-align: middle;
}

.bargain_list_energy text {
  display: inline-block;
  width: 136rpx;
  font-size: 32rpx;
  color: #1aad19;
  vertical-align: middle;
}

.bargain_list_energy>view {
  line-height: 36rpx;
  /* margin-left: 16rpx; */
  font-size: 20rpx;
  color: #999;
}
.bargain_list_energy .bargain_list_cx_imgname{
  text-align: center;
}
.bargain_list_energy>image{
  width: 40rpx;
  height: 40rpx;
}

.bargain-block {
  border-bottom: 1rpx solid #e6e6e6;
}

.bargain_list_more {
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.noBargain-text {
  text-align: center;
  margin-top: 250rpx;
  font-size: 32rpx;
  color: #666;
}

.joinBtn {
  background-image: linear-gradient(-176deg, #33f05a 1%, #00d34d 100%);
  border-radius: 3rpx;
  width: 420rpx;
  height: 88rpx;
  margin: 120rpx auto 0 auto;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  line-height: 88rpx;
}
